

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% define color 
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\definecolor{background_color}{RGB}{255, 250, 230}
\definecolor{normal_text_color}{RGB}{60, 55, 45}

%\definecolor{alerted_text_color}{RGB}{70, 45, 40}

\definecolor{alerted_text_color}{RGB}{115, 35, 70}

\definecolor{block_title_color}{RGB}{70, 45, 40}
\definecolor{block_body_color}{RGB}{235, 220, 185}

\definecolor{alerted_block_title_color}{RGB}{115, 35, 70}
\definecolor{alerted_block_body_color}{RGB}{229, 195, 190}

\definecolor{example_block_title_color}{RGB}{90, 115, 35}
\definecolor{example_block_body_color}{RGB}{225, 240, 200}

\definecolor{progress_bar_color}{RGB}{115, 35, 70}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%


%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% setting color

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%%%%% Background
\setbeamercolor{background canvas}{bg=background_color}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%%%%% Title
\setbeamercolor{title}{fg=background_color}
\setbeamercolor{subtitle}{fg=background_color}
\setbeamercolor{subtitle in headline}{fg=normal_text_color}

\setbeamercolor{date}{fg=normal_text_color}
\setbeamercolor{date in headline}{fg=normal_text_color}
\setbeamercolor{institute}{fg=normal_text_color}
\setbeamercolor{institute in headline}{fg=background_color }
\setbeamercolor{author}{fg=normal_text_color}
\setbeamercolor{author in headline}{fg=normal_text_color}

\setbeamercolor{frametitle}{fg=background_color}


%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%%%%% Section
\setbeamercolor{section in toc}{fg=normal_text_color}
\setbeamercolor{subsection in toc}{fg=normal_text_color}
\setbeamercolor{section in toc shaded}{fg=normal_text_color}
\setbeamercolor{subsection in toc shaded}{fg=normal_text_color}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%%%%% Text
\setbeamercolor{normal text}{fg=normal_text_color}
\setbeamercolor{alerted text}{fg=alerted_text_color}


\setbeamercolor{page number in head/foot}{fg=background_color}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%%%%% Block
% text of title = background_color
% text of body = normal_text_color

\setbeamercolor{block title}{bg=block_title_color, fg=background_color}
\setbeamercolor{block body}{bg=block_body_color, fg=normal_text_color}

\setbeamercolor{block title alerted}{bg=alerted_block_title_color, fg=background_color}
\setbeamercolor{block body alerted}{bg=alerted_block_body_color, fg=normal_text_color}

\setbeamercolor{block title example}{bg=example_block_title_color, fg=background_color}
\setbeamercolor{block body example}{bg=example_block_body_color, fg=normal_text_color}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%%%%% Box

\setbeamercolor{beamercolorbox}{bg=normal_box_color}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%%%%% Item

\setbeamercolor{itemize item}{fg=normal_text_color}
\setbeamercolor{itemize subitem}{fg=normal_text_color}
\setbeamercolor{itemize subsubitem}{fg=normal_text_color}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%%%%% Enumerate

\setbeamercolor{enumerate item}{fg=normal_text_color}
\setbeamercolor{enumerate subitem}{fg=normal_text_color}
\setbeamercolor{enumerate subsubitem}{fg=normal_text_color}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%%%%% Any
\setbeamercolor{footline}{fg=progress_bar_color}


